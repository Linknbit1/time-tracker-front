@use "../../app/import.scss" as *;

.sidebar {
  display: grid;
  grid-area: sidebar / 1 / span 2;
  background: map-get($colors, blue-gray-color);
  border-right: rem(1) solid map-get($colors, gray-shade-color);
  font-weight: 400;

  &__logoLink {
    display: block;
    margin-top: 15px;
    padding: 0 25px 0 25px;
    margin-bottom: rem(20);
  }

  &__item {
    color: map-get($colors, clr-gunmeta-blue) !important;
    @include flex(null, column, rem(10));
    padding: 11px 30px;
    font-size: var(--fs-14);
    @extend %p-relative;
  }

  &__btn {
    @include flex(center, $gap: rem(11));
    height: rem(24);
    width: 100%;
    white-space: nowrap;
    border: none;
    color: lighten(map-get($colors, clr-gunmeta-blue), 0);
    background-color: transparent;
    text-decoration: none;
    @extend %p-relative;

    &:focus {
      color: map-get($colors, bright-blue-color);
      @extend %fw-500;
    }

    &:hover {
      color: map-get($colors, bright-blue-color);
      cursor: pointer;
    }

    &:is(button) {
      &::after {
        content: "";
        @include square(14);
        margin-inline-start: auto;
        background-image: url("data:image/svg+xml,%3Csvg class='icon' width='200' height='200' viewBox='0 0 1024 1024' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath fill='%234d4d4d' d='M831.872 340.864L512 652.672 192.128 340.864a30.592 30.592 0 00-42.752 0 29.12 29.12 0 000 41.6L489.664 714.24a32 32 0 0044.672 0l340.288-331.712a29.12 29.12 0 000-41.728 30.592 30.592 0 00-42.752 0z'%3E%3C/path%3E%3C/svg%3E");
        background-size: cover;

        @extend %transition;
      }
    }

    svg {
      min-width: rem(18);
      @include square(18);
    }

    &[aria-current="page"] {
      color: map-get($colors, bright-blue-color);
      background-color: transparent;
      @extend %fw-500;
    }
  }

  &__list {
    height: 200px;
    padding: 0 rem(28);
    font-size: rem(12);
    border: 2px solid red;
    transition: height 2s ease-out;
    &:hover {
      color: map-get($colors, bright-blue-color);
    }
  }

  &__subItem {
    color: map-get($colors, clr-gunmeta-blue);
    width: 100%;
    @include flex(center, $gap: rem(11));
    text-decoration: none;
    height: rem(24);
    font-size: rem(12);
    padding: rem(5) rem(0) rem(5) rem(10);
    transition: height 2s ease-out;
    margin: rem(5) 0;
    border: 2px solid red;

    &:hover {
      color: map-get($colors, bright-blue-color);
    }

    &:focus {
      padding: rem(5) rem(0) rem(5) rem(10);
      border-radius: rem(10);
      color: map-get($colors, bright-blue-color);
      font-weight: 500;
    }
    &[aria-current="page"] {
      color: map-get($colors, bright-blue-color);
      background-color: map-get($colors, clr-pastel-blue-gray);
      border-radius: rem(10);

      @extend %fw-500;
    }
  }
}
